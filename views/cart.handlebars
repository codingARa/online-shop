  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">
              <div class="row">
                <div class="col-xs-6">
                  <h5><span class="glyphicon glyphicon-shopping-cart"></span>Shopping Cart</h5>
                </div>
              </div>
            </div>
          </div>

        {{#each cartitem}}
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-2"><img class="img-fluid" src="./img/{{image}}">
              </div>
              <div class="col-xs-4">
                <h4 class="product-name"><strong>{{title}}</strong></h4><h4><small>{{description}}</small></h4>
              </div>
              <div class="col-xs-6">
                <div class="col-xs-6 text-right">
                  <h6><strong>{{menge}} x {{price}} = {{sum}}  <span class="text-muted">€</span></strong></h6>
                </div>
                <div class="col-xs-4">
                  <input type="text" name="amount" class="form-control input-sm" value="{{menge}}">
                </div>
                <div class="col-xs-2">
                  <a href="/cart/delete/{{id}}" class="btn btn-link btn-xs">
                    <span class="glyphicon glyphicon-trash">Aus Cart entfernen</span>
                  </a>
                </div>
              </div>
            </div>
            <hr>
          {{else}}
            <p>Noch haben Sie nichts in den Einkaufskorb gelegt...</p>
          {{/each}}
            <hr>
          </div>

          <div class="panel-footer">
            <div class="row text-center">
              <div class="col-xs-3">
                  <a href="/cart/checkout" class="btn btn-success btn-block">
                  Checkout
                  </a>
              </div>
              <div class="col-xs-9">
                <h4 class="text-right">Total: <strong>{{total}}</strong> €</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>